
<%= render 'userinfo',book: @book_new, user: @user %>


<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                
                <!--いいね機能-->
                    <% if @book.favorited_by?(current_user) %>
                        <td>
                            <%= link_to book_favorites_path(@book), method: :delete do %>
                            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                            <%= @book.favorites.count %>
                            <% end %>
                        </td>
                    <% else %>
                        <td>
                            <%= link_to book_favorites_path(@book), method: :post do %>
                            <i class="fas fa-heart" aria-hidden="true"></i>
                            <%= @book.favorites.count %>
                            <% end %>
                        </td>
                        
                        <td>
                        <div class="comment">
                                <%= @book.book_comments.count %>件コメント
                           
                        </div>
                    </td>
                    <% end %>
                    
                <% if @user == current_user %>
                    <td><%= link_to "Edit", edit_book_path(@book), class:"btn  btn-sm btn-success" %></td>
                    <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %></td>
                <% end %>
            </tr>
          </tbody>
        </table>
        
        <table class="table">
            <% @book.book_comments.each do |book_comment| %>
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(book_comment.user) do %>
                          <%= image_tag book_comment.user.get_profile_image(100,100) %><br>
                          <%= book_comment.user.name %>
                        <% end %>
                    </td>
                    <td><%= book_comment.body %></td>
                    <% if book_comment.user == current_user %>
                        <td><%= link_to "Destroy", book_book_comment_path(book_comment.id), method: :delete, class:"btn-sm btn-danger" %></td>
                    <% end %>
                </tr>
            </tbody>
            <% end %>
        </table>

        <!--コメント入力フォーム-->
        <%= form_with(model:[@book, @book_comment], local: false) do |f| %>
            <%= f.text_area :body, rows:'5', cols:'70', placeholder: "コメントをここに" %>
            <%= f.submit "送信する", class: "btn btn-lg btn-success" %>
        <% end %>
      </div>
    </div>
  </div>  
</div>  